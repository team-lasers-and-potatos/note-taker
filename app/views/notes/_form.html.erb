
  <div class="col-md-4 col-md-offset-4">
    <div class="row">
      <ul class="notes">
        <li>
          <div class="rotate-2 yellow-bg">
            <%= form_for(@notes) do |f| %>

              <p><%= f.label :title %></p>
              <%= f.text_field :title, class: 'form-control txt' %>

              <p><%= f.label :body %></p>
              <%= f.text_area :body, class: 'form-control txt' %>

              <%= f.hidden_field :user_id %>

              <p><%= f.label :duedate %></p>
              <%= f.date_field :duedate, type: 'date', class: 'form-control txt' %>

              <br>
              <%= f.submit "Submit Note", class: 'btn btn-primary'  %>


            </div>
          </li>
        </ul>
    </div>
  </div>
<% end %>
