<div class="container">
  <div class="col-md-4 col-md-offset-4">

      <%= form_for(@notes) do |f| %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <%= f.label :body %>
        <%= f.text_field :body, class: 'form-control' %>
        <br>
        <%= f.submit "Create Note", class: 'btn btn-primary'  %>

        <% end %>

    </div>
  </div>
